{
  "name": "crowdfunding deployment test",
  "steps": [
    {
      "step": "setState",
      "accounts": {
        "address:my_address": {
          "nonce": "0",
          "balance": "1,000,000"
        }
      },
      "newAddresses": [
        {
          "creatorAddress": "address:my_address",
          "creatorNonce": "0",
          "newAddress": "sc:crowdfunding"
        }
      ]
    },
    {
      "step": "scDeploy",
      "tx": {
        "from": "address:my_address",
        "contractCode": "file:../output/crowdfunding.wasm",
        "value": "0",
        "arguments": ["500,000,000,000", "123,000"],
        "gasLimit": "1,000,000",
        "gasPrice": "0"
      },
      "expect": {
        "status": "0",
        "gas": "*",
        "refund": "*"
      }
    },
    {
      "step": "checkState",
      "accounts": {
        "address:my_address": {
          "nonce": "1",
          "balance": "1,000,000"
        },
        "sc:crowdfunding": {
          "nonce": "0",
          "balance": "0",
          "storage": {
            "''target": "500,000,000,000",
            "''deadline": "123,000"
          },
          "code": "file:../output/crowdfunding.wasm"
        }
      }
    }
  ]
}
